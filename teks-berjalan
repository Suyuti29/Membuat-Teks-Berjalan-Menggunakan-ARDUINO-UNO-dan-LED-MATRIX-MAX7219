void setup() {
  lc.shutdown(0, false);         // Mematikan display
  lc.setIntensity(0,3);         // Set brightness dari 0-15
  lc.clearDisplay(0);          // Bersihkan display awal
  //lc.setLed(0,1,1, true);     // Menyalakan display (0 address, 1 sumbu y, 1 sumbu x)
}
void loop() {
  for (int j=0;j<8;j++){
    for (int i=0;i<8;i++){
      lc.setLed(0,j,i, msoeyuti [j][(i+position)-abs((i+position)/60)*60]);
      
    }
  }
  delay(200);
     position=position+1;
}
